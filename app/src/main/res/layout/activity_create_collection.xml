<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/createColLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context=".createCollection">

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:importantForAccessibility="auto"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/navheader"
        app:menu="@menu/nav_menu" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Space
            android:layout_width="30dp"
            android:layout_height="30dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="375dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imgLogoCreateColl"
                        android:layout_width="wrap_content"
                        android:layout_height="128dp"
                        android:src="@drawable/logo" />

                    <Space
                        android:layout_width="15dp"
                        android:layout_height="15dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:fontFamily="@font/acme"
                        android:text="Create a Collection!"
                        android:textColor="@color/black"
                        android:textFontWeight="3"
                        android:textSize="30sp" />

                    <Space
                        android:layout_width="30dp"
                        android:layout_height="30dp" />

                    <EditText
                        android:id="@+id/edtName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:fontFamily="@font/amaranth"
                        android:hint="Please enter the collection name" />

                    <Space
                        android:layout_width="30dp"
                        android:layout_height="30dp" />

                    <ImageView
                        android:id="@+id/imgCollectionHold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/ic_launcher_background" />

                    <Space
                        android:layout_width="30dp"
                        android:layout_height="30dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                    <Button
                        android:id="@+id/selectImg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:fontFamily="@font/carter_one"
                        android:layout_weight="1"
                        android:text="Select Image" />
                <Space
                    android:layout_width="30dp"
                    android:layout_height="30dp" />

                <Button
                    android:id="@+id/selectCamera"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="@font/carter_one"
                    android:layout_weight="1"
                    android:text="Use Camera" />

                </LinearLayout>
                    <Space
                        android:layout_width="30dp"
                        android:layout_height="30dp" />

                    <EditText
                        android:id="@+id/edtDesc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:fontFamily="@font/amaranth"
                        android:hint="Please enter a description" />


                    <Space
                        android:layout_width="30dp"
                        android:layout_height="30dp" />

                    <Space
                        android:layout_width="30dp"
                        android:layout_height="30dp" />

                    <EditText
                        android:id="@+id/edtGoal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/amaranth"
                        android:hint="Enter a goal"
                        android:inputType="number" />

                    <Button
                        android:id="@+id/btnCreateColl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:fontFamily="@font/carter_one"
                        android:text="Create!" />

                    <Space
                        android:layout_width="15dp"
                        android:layout_height="15dp" />
                </LinearLayout>
            </ScrollView>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>