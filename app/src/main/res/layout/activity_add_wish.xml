<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".createCollection"
    android:background="@drawable/background"
    android:orientation="vertical">

    <Space
        android:layout_width="30dp"
        android:layout_height="30dp" />

    <androidx.cardview.widget.CardView
        android:layout_width="375dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/imgLogoCreateColl"
                    android:layout_width="wrap_content"
                    android:layout_height="128dp"
                    android:src="@drawable/logo" />

                <Space
                    android:layout_width="15dp"
                    android:layout_height="15dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="@font/acme"
                    android:text="Add Item to Wishlist"
                    android:textColor="@color/black"
                    android:textFontWeight="3"
                    android:textSize="30sp" />

                <Space
                    android:layout_width="30dp"
                    android:layout_height="30dp" />

                <EditText
                    android:id="@+id/wishName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="@font/amaranth"
                    android:hint="Please enter the wishlist item" />

                <Space
                    android:layout_width="30dp"
                    android:layout_height="30dp" />

                <Space
                    android:layout_width="30dp"
                    android:layout_height="30dp" />

                <EditText
                    android:id="@+id/wishDesc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="@font/amaranth"
                    android:hint="Please enter a description" />


                <Space
                    android:layout_width="30dp"
                    android:layout_height="30dp" />

                <Space
                    android:layout_width="30dp"
                    android:layout_height="30dp" />

                <EditText
                    android:id="@+id/wishPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="@font/amaranth"
                    android:hint="Please enter the expected price"
                    android:inputType="number" />

                <Space
                    android:layout_width="30dp"
                    android:layout_height="30dp" />

                <Space
                    android:layout_width="30dp"
                    android:layout_height="30dp" />

                <Button
                    android:id="@+id/btnAddWish"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="@font/carter_one"
                    android:text="Create!" />
                <Space
                    android:layout_width="15dp"
                    android:layout_height="15dp" />

                <Button
                    android:id="@+id/btnShowWish"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="@font/carter_one"
                    android:text="View Wishlist!" />

                <Space
                    android:layout_width="30dp"
                    android:layout_height="30dp" />

            </LinearLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>

</LinearLayout>